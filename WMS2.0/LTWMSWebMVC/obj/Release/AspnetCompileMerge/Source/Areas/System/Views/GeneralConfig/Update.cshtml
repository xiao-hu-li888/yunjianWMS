@model LTWMSWebMVC.Areas.System.Data.GeneralConfigModel
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "ViewList";
}

<section class="btn_div">
    <a href="#" class="icos ico_refresh">刷新</a>
</section>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div class="widget-box">
        <div class="widget-header" style="margin-bottom:5px;">
            <h5 class="pink" style="display:inline-block;margin-right:15px;">
                <i class="ace-icon fa fa-caret-right red"></i>
                <a href="#modal-table" role="button" class="green" data-toggle="modal">通用配置</a>
            </h5>
        </div>
        <fieldset>
            <legend></legend>
            <div class="form-group form-border">
                <label class="col-sm-3 control-label no-padding-right" for="form-field-1"> @Html.LabelFor(model => model.PassWordExpiration) </label>
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.PassWordExpiration)
                    @Html.ValidationMessageFor(model => model.PassWordExpiration)
                    @*<span class="necessary">(请输入一个大于300（5分钟）的值)</span>*@
                </div>
                <div class="clear"></div>
            </div>
            <div class="form-group form-border">
                <label class="col-sm-3 control-label no-padding-right" for="form-field-1">@Html.LabelFor(model => model.LoginTimeOut)</label>
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.LoginTimeOut)
                    @Html.ValidationMessageFor(model => model.LoginTimeOut)
                    <span class="necessary">(登录超时时间修改后需要重新登录)</span>
                </div>
                <div class="clear"></div>
            </div>

            <div class="form-group form-border">
                <label class="col-sm-3 control-label no-padding-right" for="form-field-1">@Html.LabelFor(model => model.NearTerm)</label>
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.NearTerm)
                    @Html.ValidationMessageFor(model => model.NearTerm)
                    <span class="necessary">(定义临近有效期以天为单位)</span>
                </div>
                <div class="clear"></div>
            </div>

            <p>
                <button class="btn btn-sm btn-info" type="submit">
                    <i class="ace-icon fa fa-check bigger-110"></i>
                    保存数据
                </button>
            </p>
        </fieldset>
    </div>
}
@if (!string.IsNullOrWhiteSpace(@Model.Message))
{
    <script type="text/javascript">
        alert("@Model.Message");
        location.href = location.href;
    </script>
}
