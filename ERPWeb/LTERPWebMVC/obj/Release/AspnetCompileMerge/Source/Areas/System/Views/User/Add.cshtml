@model LTERPWebMVC.Areas.System.Data.sysloginModel

@{
    ViewBag.Title = "Add";
}
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

<fieldset>
    <legend>登录用户</legend>
    @if (ViewBag.isUpdate != null && ViewBag.isUpdate)
    {
        @Html.HiddenFor(model => model.guid)
        @Html.HiddenFor(model => model.OldRowVersion)
    }

    <div class="form-group form-border">
        <label class="col-sm-3 control-label no-padding-right" for="form-field-1">  <span class="necessary">*</span> @Html.LabelFor(model => model.loginname)</label>
        <div class="col-sm-9">
            @if (ViewBag.isUpdate != null && ViewBag.isUpdate)
            {

                @Html.DisplayFor(model => model.loginname)
                @Html.HiddenFor(model => model.loginname)
            }
            else
            {
                @Html.EditorFor(model => model.loginname)
                @Html.ValidationMessageFor(model => model.loginname)
            }
        </div>
        <div class="clear"></div>
    </div>

    <div class="form-group form-border">
        <label class="col-sm-3 control-label no-padding-right" for="form-field-1">  @Html.LabelFor(model => model.password)</label>
        <div class="col-sm-9">
            @Html.EditorFor(model => model.password)
            @Html.ValidationMessageFor(model => model.password)<span class="def-pass">(默认密码：123456)</span>
        </div>
        <div class="clear"></div>
    </div>
    <div class="form-group form-border">
        <label class="col-sm-3 control-label no-padding-right" for="form-field-1">  <span class="necessary">*</span>   @Html.LabelFor(model => model.username)</label>
        <div class="col-sm-9">
            @Html.EditorFor(model => model.username)
            @Html.ValidationMessageFor(model => model.username)
        </div>
        <div class="clear"></div>
    </div>

    <div class="form-group form-border">
        <label class="col-sm-3 control-label no-padding-right" for="form-field-1">     @Html.LabelFor(model => model.position)</label>
        <div class="col-sm-9">
            @Html.EditorFor(model => model.position)
            @Html.ValidationMessageFor(model => model.position)
        </div>
        <div class="clear"></div>
    </div>
    <div class="form-group form-border">
        <label class="col-sm-3 control-label no-padding-right" for="form-field-1">     @Html.LabelFor(model => model.mobile)</label>
        <div class="col-sm-9">
            @Html.EditorFor(model => model.mobile)
            @Html.ValidationMessageFor(model => model.mobile)
        </div>
        <div class="clear"></div>
    </div>
    <div class="form-group form-border">
        <label class="col-sm-3 control-label no-padding-right" for="form-field-1">     @Html.LabelFor(model => model.gender)</label>
        <div class="col-sm-9">
            @Html.EditorFor(model => model.gender)
            @Html.ValidationMessageFor(model => model.gender)
        </div>
        <div class="clear"></div>
    </div>

    <div class="form-group form-border">
        <label class="col-sm-3 control-label no-padding-right" for="form-field-1">@Html.LabelFor(model => model.issuperadmin)</label>
        <div class="col-sm-9">
            @Html.EditorFor(model => model.issuperadmin)
            @Html.ValidationMessageFor(model => model.issuperadmin)
        </div>
        <div class="clear"></div>
    </div>
    <div class="form-group form-border">
        <label class="col-sm-3 control-label no-padding-right" for="form-field-1">  @Html.LabelFor(model => model.ex_role)</label>
        <div class="col-sm-9">
            @Html.EditorFor(model => model.ex_role)
            @Html.ValidationMessageFor(model => model.ex_role)
        </div>
        <div class="clear"></div>
    </div>
    <div class="form-group form-border">
        <label class="col-sm-3 control-label no-padding-right" for="form-field-1">  @Html.LabelFor(model => model.state)</label>
        <div class="col-sm-9">
            @Html.EditorFor(model => model.state)
            @Html.ValidationMessageFor(model => model.state)
        </div>
        <div class="clear"></div>
    </div>
    <p>
        @*<input type="submit" value="@ViewBag.SubmitText" />*@
        <button class="btn btn-sm btn-info" type="submit">
            <i class="ace-icon fa fa-check bigger-110"></i>
            @ViewBag.SubmitText
        </button>
    </p>
</fieldset>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
